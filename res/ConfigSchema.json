{
    "id": "http://www.martin-helmich.de/projects/graphizer/schema/config.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "GraPHPizer configuration schema",
    "type": "object",
    "properties": {
        "config": {
            "$ref": "#/definitions/configuration"
        },
        "subConfigs": {
            "type": "object",
            "patternProperties": {
                "^(.*+\\/)+$": {
                    "$ref": "#/definitions/configuration"
                }
            }
        }
    },
    "additionalProperties": false,
    "required": ["config"],
    "definitions": {
        "configuration": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "matchPatterns": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                },
                "excludePatterns": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                },
                "package": {
                    "type": ["string", "object"],
                    "oneOf": [
                        {"$ref": "#/definitions/packageManual"}
                    ]
                }
            }
        },

        "packageManual": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "description"],
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9_\\\\]+$"
                },
                "description": {
                    "type": "string"
                }
            }
        }
    }
}